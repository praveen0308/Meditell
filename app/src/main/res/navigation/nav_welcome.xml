<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_welcome"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.jmm.brsap.meditell.ui.welcome.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_login"
            app:destination="@id/login"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_welcome"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashScreen_to_mainDashboard"
            app:destination="@id/mainDashboard"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_welcome"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashScreen_to_currentActiveDayActivity"
            app:destination="@id/currentActiveDayActivity" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.jmm.brsap.meditell.ui.welcome.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_mainDashboard"
            app:destination="@id/mainDashboard" />
    </fragment>
    <activity
        android:id="@+id/mainDashboard"
        android:name="com.jmm.brsap.meditell.ui.dashboard.MainDashboard"
        android:label="activity_main_dashboard"
        tools:layout="@layout/activity_main_dashboard" />
    <activity
        android:id="@+id/currentActiveDayActivity"
        android:name="com.jmm.brsap.meditell.ui.currentdayactivity.CurrentActiveDayActivity"
        android:label="activity_current_active_day"
        tools:layout="@layout/activity_current_active_day" />
</navigation>